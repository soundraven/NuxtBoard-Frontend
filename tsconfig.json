{
    // https://nuxt.com/docs/guide/concepts/typescript
    "extends": "./.nuxt/tsconfig.json",

    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "skipLibCheck": true,
        "types": ["@nuxt/types", "@nuxtjs/tailwindcss"]
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
}

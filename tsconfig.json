{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      //   "@nuxt/types",
      "@nuxtjs/tailwindcss",
      "nuxt",
      "./types/dayjs"
    ],
    "allowImportingTsExtensions": true
  },
  "exclude": ["node_modules", "dist"]
}
